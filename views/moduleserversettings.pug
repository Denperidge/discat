- var keys = Object.keys(settings);
- for (var i=0; i < keys.length; i++)
    case typeof settings[keys[i]]
        when "number"
            input(type="number" placeholder=Object.keys(settings[keys[i]])[0] value=settings[keys[i]])
        when "string"
            input(type="text" placeholder=Object.keys(settings[keys[i]])[0] value=settings[keys[i]])
        when "boolean"
            if settings[keys[i]] == true
                input(type="checkbox" checked)
                span #{Object.keys(settings[keys[i]])[0]}
            else
                input(type="checkbox")
                span #{Object.keys(settings[keys[i]])[0]}